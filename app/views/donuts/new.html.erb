<%= form_for @donut do |f| %>
  <%= f.label :title, "name your donut" %>
  <%= f.text_field :title %> 
  <br>

  <%= f.label :description, "what changes do you want to make" %>
  <%= f.text_area :description %>
  <br>

  <%= f.label :email %>
  <%= f.text_field :email, :value => current_user.email, :readonly => true %>
  <br>

   <%= f.submit 'this is my label', :class => 'btn btn-primary'  %>

<% end %>