<%= form_for @donut do |f| %>

  <%= f.label :title, "name your donut" %>
  <%= f.text_field :title %> 
  <br>

  <%= f.label :dough, "what kind of dough?" %>
  <%= f.select(:dough, Donut.doughs.keys.map {|dough| [dough.titleize,dough]}) %>
  <br>

  <%= f.label :frosting, "what kind of frosting" %>
 <%= f.select(:frosting, Donut.frostings.keys.map {|frosting| [frosting.titleize,frosting]}) %>
  <br>


  <%= f.label :topping, "which topping" %>
 <%= f.select(:topping, Donut.toppings.keys.map {|topping| [topping.titleize,topping]}) %>
  <br>

   <%= f.submit 'Proceed'  %>

 
<% end %>

